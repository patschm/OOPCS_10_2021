@model WebLingo.Models.LingoModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/Content/lingo.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <h1>Lingo</h1>

    @foreach (var word in Model.Guesses)
    {
        @Html.ShowWord(word);
        <br />
    }
    <hr />
    @if (Model.Finished)
    {
        @Html.ShowWord(Model.WordToBeGuessed)
        <h1>Your IQ is @Model.YourIQ</h1>
    }

    <hr />
    <form action="/Home/Index" method="post">
        <input type="text" name="Guess" autofocus="autofocus" /><input type="submit" value="Guess" />
    </form>
</body>
</html>

